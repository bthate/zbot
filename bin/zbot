#!/usr/bin/python3 -u
# ZBOT - 24/7 channel daemon
#
#

from zbot.obj import cdir, os
from zbot.csl import Console, boot, execute
from zbot.hdl import Kernel

def main():
    k = boot("zbot")
    k.walk("zbot,mods")
    if k.cfg.txt:
        return k.cmd(k.cfg.origtxt)
    k.start()
    c = Console()
    c.start()
    k.wait()

execute(main)
os._exit(0)
